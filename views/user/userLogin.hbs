<section class="vh-100" style="background-color: white;">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6 ps-5">
                <img src="/img/login.jpg" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 pe-5">
                <form action="/loginCheck" method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="form1Example13" class="form-control form-control-lg" name="email" />
                        <label class="form-label" for="form1Example13">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="form1Example23" class="form-control form-control-lg"
                            name="password" />
                        <label class="form-label" for="form1Example23">Password</label>
                    </div>
                    <div class="form-outline mb-4">
                        <p id="error" class="text-danger"></p>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4 text-danger">

                        {{#if userNotValid}}<h6>User name or password is incorrect</h6>{{/if}}
                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">

                        <a href="/forgotPassword">Forgot password?</a>
                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">

                        <a href="/signUp">Create an account</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-lg btn-block text-light"
                        style="background-color: rgb(236,79,162);">Sign in</button>


                </form>
            </div>
        </div>
    </div>
</section>

<script>
    let form = document.querySelector('form')
    let username = document.getElementById('form1Example13')
    let pass = document.getElementById('form1Example23')
    let error = document.getElementById('error')
    form.addEventListener('submit', validate)
    function validate(e) {
        if (username.value == "") {
            e.preventDefault();
            error.innerText = "Enter user name"
        }
        else if (pass.value == "") {
            e.preventDefault();
            error.innerText = "Enter password"
        }
    }
</script>