<section style="background-color: #fbfbfb;">
  <div class="container py-5">
    <div class="row">
      {{#each data}}
      <div class="col-md-6 col-lg-4 mb-4 mb-md-0">
        <div class="card">
          <div class="d-flex justify-content-between p-3">
            <p class="lead mb-0">neonates...</p>
            <div
              class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong"
              style="width: 35px; height: 35px;">
              <a href="/userDashBoard" class="text-decoration-none"><p class="text-white mb-0 small">{{../firstLetter}}</p></a>
            </div>
          </div>
          <img src="/images/{{this.order.image.[0]}}"
            class="card-img-top" alt="{{this.order.productname}}" />
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <p class="small"><a href="#!" class="text-muted">{{this.order.productname}}</a></p>
              <p class="small text-danger"><s>&#x20b9;1399</s></p>
            </div>

            <div class="d-flex justify-content-between mb-3">
              <h5 class="mb-0">{{this.order.brandname}}</h5>
              <h5 class="text-dark mb-0">&#x20b9;{{this.order.price}}</h5>
            </div>

            <div class="d-flex justify-content-between mb-2">
              <p class="text-muted mb-0">Qty: <span class="fw-bold">{{this.quantity}}</span></p>
              <div class="ms-auto text-warning">
                <i class="fa fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>