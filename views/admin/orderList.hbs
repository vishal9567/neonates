<script>
    function changeStat(orderid, orderStat) {

        $.ajax({
            url: '/admin/changeStatus',
            data: {
                orderId: orderid,
                orderStatus: orderStat
            },
            method: 'post',
            success: (function (response) {
                if (response.removeProduct) {
                    //alert("Status changed")
                    location.reload()
                }
                else {
                    location.reload()
                }
            })
        })
    }
</script>

<script>
    function getStatus(status) {
        $('#notFound').empty()
        $.ajax({
            url: 'findTheOrder?status=' + status,
            method: 'get',
            success: (function (response) {
                if (response.orderNotfound) {
                    $('#productsTable').empty();
                    $('#productsTable').append(`
                <thead class="bg-primary text-light">
                    <tr>
                        <th>Order Id</th>
                        <th>Customer</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Order Date</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                    </tr>
                </thead>
                `)
                    $('#notFound').append(`Not Found`)
                }
                else {

                    //alert(response[0].userName)
                    //response.reverse()
                    $('#productsTable').empty();
                    $('#productsTable').append(`
                <thead class="bg-primary text-light">
                    <tr>
                        <th>Order Id</th>
                        <th>Customer</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Order Date</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                    </tr>
                </thead>
                `)
                    for (var i = 0; i < response.length; i++) {
                        let status = '';
                        if (response[i].status == 1) {
                            status = `<h6 class="text-success" ></h6>
                                Placed</h6>`}
                        if (response[i].status == 2) {
                            status = `<h6 class="text-warning" ></h6>
                                Pending</h6>`}
                        if (response[i].status == 3) {
                            status = `<h6 class="text-info" ></h6>
                                Returned</h6>`}
                        if (response[i].status == 4) {
                            status = `<h6 class="text-danger" ></h6>
                                Cancelled</h6>`}
                        if (response[i].status == 5) {
                            status = `<h6 class="text-primary" ></h6>
                                Delivered</h6>`}


                        $('#productsTable').append(` <tbody style="background-color: rgb(187, 187, 223);">
                <tr>
                    <td><a href="/admin/showOrderDetail/${response[i]._id}" class="text-decoration-none">
                            <h6 class="text-primary">${response[i]._id}</h6>
                        </a></td>
                    <td>${response[i].userName}</td>
                    <td>${response[i].quantity}</td>
                    <td>${response[i].totalAmount}</td>
                    <td>${response[i].date}</td>
                    <td>${response[i].paymentMethod}</td>
                    <td>
                        <div>
                            ${status}
                        </div>
                    </td>
                    
                </tr>

            </tbody>`)
                    }
                }
            })
        })
    }
</script>