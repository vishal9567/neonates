  const error=document.getElementById('error')
  const file=document.getElementById('file')
  const form = document.getElementById('formData')

  form.addEventListener('submit', validate)

  function validate(e){
    if(proname.value == ""){
      e.preventDefault();
      error.innerText="Enter Product name"
    }
    else if(price.value == "" || price.value <=0){
      e.preventDefault();
      error.innerText="Enter valid price"
    }
    else if(qty.value == "" || qty.value <= 0){
      e.preventDefault();
      error.innerText="Enter valid quantity"
    }
    else if(brandname.value == ""){
      e.preventDefault();
      error.innerText="Enter brand name"
    }
    else if(color.value == ""){
      e.preventDefault();
      error.innerText="Enter color"
    }
    else if(dis.value == ""){
      e.preventDefault();
      error.innerText="Enter discription"
    }
    else if(file.files.length == 0){
      e.preventDefault();
      error.innerText="choose file"
    }
   
  }
  
</script>